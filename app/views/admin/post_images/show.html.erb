<div class="post-body">
  <%= attachment_image_tag @post_image, :image %>

  <p>タイトル：<%= @post_image.title %></p>
  <p>説明：<%= @post_image.description %></p>
  <p>ユーザーネーム：<%= @post_image.user.name %></p>
  <p>投稿日時：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>

    <%= link_to '編集', edit_admin_post_image_path(@post_image) %>
    <%= link_to "削除", admin_post_images_path(@post_image), method: :delete %>

    <p>
</div>
<div class="comments">
<p>コメント件数：<%= @post_image.post_comments.count %></p>
<% @post_image.post_comments.each do |post_comment| %>
  <p><%= attachment_image_tag(@post_image.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></p>
  <p><%= post_comment.user.name %></p>
  <p><%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %></p>
  <% if post_comment.user == current_user %>
  <div class="comment-delete">
    <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete %>
  </div>
  <% end %>
<% end %>
</div>