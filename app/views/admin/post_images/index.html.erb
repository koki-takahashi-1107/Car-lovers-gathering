<div class="card-list-containar py-5">
  <h3>タグリスト</h3>
  <% @tag_list.each do |list| %>
  <span>
    <%= link_to list.tag_name, post_images_path(tag_id: list.id) %>
    <%= "(#{list.post_images.count})" %>
  </span>
  <% end %>
  <h3>投稿一覧</h3>
  <% @post_images.each do |post_image| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_image_path(post_image.id) do %>
      <%= attachment_image_tag post_image, :image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_image_path(post_image.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post_image.user.name %></span></strong>
               <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
            <% end %>
          </p>
          <p class="card-text">説明：<%= post_image.description %></p>
          <span><i class="fas fa-user"></i> By <%= post_image.user.name %> ｜ </span>

        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate @post_images %>
</div>